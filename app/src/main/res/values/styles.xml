<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--toolbar自体の設定-->
    <style name="ToolbarTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <!--toolbarテキストの設定
        <item name="android:textColorPrimary">@color/white</item>-->
        <!-- ToolBarのOverflowメニューのテキスト
        <item name="android:textColor">@color/black</item>-->
        <item name="android:textSize">20sp</item>
        <!-- ToolBarのoverflowメニューのアイコンを白にする
        <item name="android:textColorSecondary">@color/white</item>-->
    </style>

    <!-- tab theme -->
    <style name="MyTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">10dp</item>
        <item name="android:textSize">90sp</item>
        <item name="android:textColor">#000000</item>
<!--        <item name="android:background">#009900</item>-->
    </style>

</resources>
